<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/height_10"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/height_10"
        android:orientation="horizontal"  >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/rectirs_image"
            android:layout_width="@dimen/recites"
            android:layout_height="@dimen/recites"
            android:src="@drawable/home" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" android:id="@+id/itemLayout">

            <TextView
                android:id="@+id/sorahName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_20"
                android:text="@string/app_name"
                android:textSize="@dimen/mediumTextSize"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/rectirsName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_20"
                android:layout_marginTop="@dimen/height_10"
                android:text="@string/app_name"
                android:textSize="@dimen/smallTextSize"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/sorahDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_20"
                android:text="@string/app_name"
                android:layout_marginTop="@dimen/height_10"
                android:textSize="10sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_20"
                android:layout_marginTop="@dimen/height_10"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/numOfListen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/headphoneicon"
                    android:drawablePadding="@dimen/height_5"
                    android:text="2000" />

                <TextView
                    android:id="@+id/numOfLikes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/likeicon"
                    android:drawablePadding="@dimen/height_5"
                    android:paddingLeft="@dimen/height_10"
                    android:text="2000888"

                    />
            </LinearLayout>
            <ProgressBar
                android:id="@+id/downloadProgress"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"/>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>