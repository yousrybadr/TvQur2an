<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/height_10"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/height_10"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/videoView"
                android:layout_width="@dimen/recites"
                android:layout_height="@dimen/recites"
                />
            <ImageView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               android:src="@drawable/playbtn" android:layout_centerInParent="true" />

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/vieoName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_20"
                android:text="@string/app_name"
                android:textSize="@dimen/mediumTextSize"
                android:textStyle="bold" />




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_20"
                android:layout_marginTop="@dimen/height_10"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/numOfListen"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/headphoneicon"
                    android:drawablePadding="@dimen/height_5"
                    android:text="2000" />

                <TextView
                    android:id="@+id/numOfLikes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/likeicon"
                    android:drawablePadding="@dimen/height_5"
                    android:paddingLeft="@dimen/height_10"
                    android:text="2000888"

                    />
            </LinearLayout>
            <TextView
                android:id="@+id/calender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/calendar"
                android:drawablePadding="@dimen/height_5"
                android:paddingTop="@dimen/height_10"
                android:layout_marginLeft="@dimen/margin_20"
                android:text="2000" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>